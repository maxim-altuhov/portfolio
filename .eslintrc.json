{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb-base/legacy"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-use-before-define": ["warn", { "functions": false }],
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-var": "error",
    "no-console": "warn",
    "linebreak-style": 0
  }
}
